{% if colour_name %}
  {% liquid
    assign image_handle = colour_name | escape | handle | append: '-snippet.webp'
    assign card_image = images[image_handle]
  %}
  <img
    src="{{ card_image | image_url: width: 40 }}"
    height="40"
    width="40"
    loading="lazy"
    class="colour-snippet motion-reduce"
  >
{% endif %}
