			"max": 50,
			"step": 1,
			"unit": "px",
			"label": "Section Padding Top and Bottom",
			"default": 0
		},
		{
			"type": "range",
			"id": "insta-pin__mobile-padding-sides",
			"min": 0,
			"max": 50,
			"step": 1,
			"unit": "px",
			"label": "Section Padding Sides",
			"default": 0
		},
		{
			"type": "header",
			"content": "Desktop Settings"
		},
		{
			"type": "range",
			"id": "insta-pin__desktop-font-size",
			"min": 0,
			"max": 50,
			"step": 1,
			"unit": "px",
			"label": "Title Font Size",
			"default": 25
		},
		{
			"type": "range",
			"id": "insta-pin__desktop-padding-topbottom",
			"min": 0,
			"max": 50,
			"step": 1,
			"unit": "px",
			"label": "Section Padding Top and Bottom",
			"default": 0
		},
		{
			"type": "range",
			"id": "insta-pin__desktop-padding-sides",
			"min": 0,
			"max": 50,
			"step": 1,
			"unit": "px",
			"label": "Section Padding Sides",
			"default": 0
		},
		{
			"type":"header",
			"content": "Instagram Section"
		},
		{
			"type": "url",
			"id": "insta-pin__insta-url",
			"label": "Instagram Page URL"
		},
		{
			"type": "text",
			"id": "insta-pin__insta-title",
			"label": "Instagram Button Text",
			"default": "Explore More"
		},
		{
			"type":"header",
			"content": "Pinterest Section"
		},
		{
			"type": "url",
			"id": "insta-pin__pin-url",
			"label": "Pinterest Page URL"
		},
		{
			"type": "text",
			"id": "insta-pin__pin-title",
			"label": "Pinterest Button Text",
			"default": "Explore More"
		}
	],
	"blocks":[
		{
			"name":"Instagram",
			"limit":2,
			"type":"instagram",
			"settings":[
				{
					"type":"header",
					"content": "Instagram Image"
				},
				{
					"type": "image_picker",
					"id": "insta-pin__image",
					"label": "Style Image",
					"info": "Image size 471px x 705px"
				},
				{
					"type": "url",
					"id": "insta-pin__url",
					"label": "URL",
