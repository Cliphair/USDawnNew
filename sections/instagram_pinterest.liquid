		},
		{
			"name":"Pinterest",
			"limit":2,
			"type":"pinterest",
			"settings":[
				{
					"type":"header",
					"content": "Pinterest Image"
				},
				{
					"type": "image_picker",
					"id": "insta-pin__image",
