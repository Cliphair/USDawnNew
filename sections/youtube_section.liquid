<div class='container page-width video_section'>
  <h2>{{ section.settings.section_title }}</h2>
  <div class='row'>
    <div class='col-12 col-md-6'>
      	<iframe class='video' width="100%" height="315" src="https://www.youtube.com/embed/zllF7N2tr7k?controls=0" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
      	<h3>{{ section.settings.video_title1}}</h3>
    </div>
    <div class='col-12 col-md-6'>
      	<iframe class='video' width="100%" height="315" src="https://www.youtube.com/embed/tgfpzDzN_fw?controls=0" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    	<h3>{{ section.settings.video_title1}}</h3>
    </div>
  </div>
</div>

<style>
  #shopify-section-template--14635259854909__16492433486f2feb93{
  	padding: 20px 0;
    background: {{ section.settings.section_bg }};
    margin: 30px 0 0;
  }
  
  .video_section{
    margin-top: {{ section.settings.section_margin_top }}px;
  }
  
  .video_section > h2{
    margin-bottom: 5px;
  }

  .row{
    display:flex;
    flex-direction:column;
    justify-content:center;
    algin-items:center;
    gap: 30px;
  }

  .col-12{
    width:100%;
  }
  
  .video{
  	height: calc((100vw - 30px) / 1.78);
    border: 1px solid #9c3078;
  }

  @media only screen and (min-width:768px){
    .row{
      flex-direction:row;
    }
    
    .col-md-6{
      width:calc(50% - 15px);
    }
  }
  
  @media only screen and (min-width:992px){
  	.video{
  		height: calc(((100vw - 60px)/2) / 1.78);
  	}
    
    .video_section{
    	padding:0 15px!important;
    }
  }
  
  @media only screen and (min-width:1500px){
    .video{
  		height: calc(((1250px - 60px)/2) / 1.78);
  	}
  }
</style>

{% schema %}
{
  	"name": "Youtube Section",
  	"settings": [
		{
			"type": "header",
			"content": "Settings"
		},
		{
			"type": "text",
			"id": "section_title",
			"label": "Section Title"
		},
		{
			"type": "color",
			"id": "section_bg",
			"label": "Section Background Colour",
			"default": "#e6c2c3"
		},
		{
			"type": "range",
			"id": "section_margin_top",
			"min": 0,
			"max": 50,
			"step": 1,
			"unit": "px",
			"label": "Margin Top",
			"default": 0
		}
	]
}
{% endschema %}
