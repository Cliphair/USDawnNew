{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{% if section.settings['max-width'] != empty %}
  <style>
    .custom-width-{{  section.id }}{
      max-width:{{ section.settings.max-width }}px;
    }
  </style>
{% endif %}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width custom-width-{{  section.id }} section-{{ section.id }}-padding">
    <div style="margin:0 auto;" class="pxFormGenerator" id="{{  section.settings.id }}"></div>
  </div>
</div>

{% schema %}
{
  "name": "Form builder app",
  "tag": "section",
  "class": "section section-form-builder-app",
  "settings": [
    {
      "type": "text",
      "id": "id",
      "label": "Form id"
    },
    {
      "type": "text",
      "id": "max-width",
      "label": "Custom width (px)",
      "info": "Keep empty if want to use default width."
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Form builder app"
    }
  ]
}
{% endschema %}
