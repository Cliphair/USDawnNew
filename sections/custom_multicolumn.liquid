    width: 100%;
    margin:0;
  }

  #{{ section.id }} > .custom-multicolumn-container{
    margin: 0 auto;
    display:flex;
    flex-direction:column;
    align-items:center;
    justify-content:space-evenly;
    flex-wrap:nowrap;
  }

  #{{ section.id }} .text_container,
  #{{ section.id }} .video_container,
